#
# This config shows that you must define a host setting for a remote backup
#

#
# this config shows that we can define one basic backup
#

backup homeBackup {

    remote=yes

    ###host=foo
    
    subvol=home

    backup_dir=/

    timeframe=hourly

    keep=100
}

subvol home {

    mountpoint=/home

    5minute_want=no
    5minute_keep=0

    hourly_want=no
    hourly_keep=0

    midnight_want=no
    midnight_keep=0

    monthly_want=no
    monthly_keep=0
}

yabsm_dir=/#always required
