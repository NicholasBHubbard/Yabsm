#
# This config shows that the opening brace can touch the subject name
#

yabsm_dir=/ # always required

subvol home{ # touching
       mountpoint=/home
       5minute_want=no
       hourly_want=no
       midnight_want=no
       weekly_want=no
       monthly_want=no
}

backup homeBackup{ # touching
       subvol=home
       remote=no
       backup_dir=/
       keep=100
       timeframe=midnight
}