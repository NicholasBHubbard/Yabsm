#
# this config shows that we can define many subvols
#

snapshot_dir=/#always required

define_subvol home {

    mountpoint=/home

    hourly_want=no
    hourly_take=0
    hourly_keep=0

    daily_want=no
    daily_take=0
    daily_keep=0

    midnight_want=no
    midnight_keep=0

    monthly_want=no
    monthly_keep=0
}

define_subvol root {

    mountpoint=/root

    hourly_want=yes
    hourly_take=0
    hourly_keep=0

    daily_want=yes
    daily_take=0
    daily_keep=0

    midnight_want=yes
    midnight_keep=0

    monthly_want=yes
    monthly_keep=0
}

define_subvol mnt {

    mountpoint=/mnt

    hourly_want=yes
    hourly_take=1
    hourly_keep=1

    daily_want=no
    daily_take=1
    daily_keep=1

    midnight_want=no
    midnight_keep=100

    monthly_want=no
    monthly_keep=10000
}

define_subvol tmp {

    mountpoint=/tmp

    hourly_want=yes
    hourly_take=60
    hourly_keep=500000

    daily_want=yes
    daily_take=24
    daily_keep=0

    midnight_want=yes
    midnight_keep=1000000000000

    monthly_want=yes
    monthly_keep=1
}