#
# this config shows that trailing whitespace is ignored. Every line/setting has trailing whitespace.
#
yabsm_dir=/    
        
subvol home {  
       mountpoint=/home  
       5minute_want=yes             
       5minute_keep=1    
       hourly_want=yes    
       hourly_keep=1     
       midnight_want=yes     
       midnight_keep=1      
       weekly_want=yes  
       weekly_keep=1         
       weekly_day=monday        
       monthly_want=yes     
       monthly_keep=1       
}       
    
backup homeBackup {         
       subvol=home    
       remote=yes     
       host=foobar      
       backup_dir=/       
       timeframe=weekly      
       weekly_day=monday     
       keep=1    
}      
       
