#
# this config shows that we can define many subvols
#

yabsm_snapshot_dir=/#always required

define_subvol home {

    mountpoint=/home

    5minute_want=no
    5minute_keep=0

    hourly_want=no
    hourly_keep=0

    midnight_want=no
    midnight_keep=0

    monthly_want=no
    monthly_keep=0
}

define_subvol root {

    mountpoint=/root

    5minute_want=yes
    5minute_keep=0

    hourly_want=yes
    hourly_keep=0

    midnight_want=yes
    midnight_keep=0

    monthly_want=yes
    monthly_keep=0
}

define_subvol mnt {

    mountpoint=/mnt

    5minute_want=no
    5minute_keep=1

    hourly_want=yes
    hourly_keep=1

    midnight_want=no
    midnight_keep=100

    monthly_want=no
    monthly_keep=10000
}

define_subvol tmp {

    mountpoint=/tmp

    5minute_want=yes
    5minute_keep=0

    hourly_want=yes
    hourly_keep=500000

    midnight_want=yes
    midnight_keep=1000000000000

    monthly_want=yes
    monthly_keep=1
}
