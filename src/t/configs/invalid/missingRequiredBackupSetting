#
# This config shows that we cannot omit a required backup setting
#

yabsm_dir=/

define_backup homeBackup {

    ### subvol=home # REQUIRED

    remote=yes
    host=whatever
    backup_dir=/
    timeframe=5minute
    keep=100
}

define_subvol home {
    mountpoint=/home
    5minute_want=no
    hourly_want=no
    daily_want=no
    weekly_want=no
    monthly_want=no
}
