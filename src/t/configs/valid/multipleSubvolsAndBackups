
#
# This config shows we can defined multiple subvols and backups
#

yabsm_dir=/

subvol root {
    mountpoint=/

    5minute_want=no

    hourly_want=yes
    hourly_keep=24

    daily_want=no

    weekly_want=yes
    weekly_keep=7
    weekly_time=23:59
    weekly_day=tuesday

    monthly_want=yes
    monthly_time=00:00
    monthly_keep=12
}

subvol home {
    mountpoint=/home

    5minute_want=yes
    5minute_keep=12

    hourly_want=no

    daily_want=yes
    daily_time=12:30
    daily_keep=14

    weekly_want=no

    monthly_want=no
}

backup rootBackup {
    subvol=root
    remote=no
    backup_dir=/
    keep=100
    timeframe=weekly
    time=23:59
    day=friday
}

backup homeBackup {
    subvol=home
    remote=yes
    host=foohost
    backup_dir=/home
    timeframe=hourly
    keep=12
}
