#
# this config shows that trailing whitespace is ignored. Every line/setting has trailing whitespace.
#
yabsm_dir=/    
        
subvol home {  
       mountpoint=/home  

       5minute_want=yes             
       5minute_keep=1    

       hourly_want=yes    
       hourly_keep=1     
   
       daily_want=yes     
       daily_time=23:59             
       daily_keep=1      
  
       weekly_want=yes  
       weekly_time=23:59      
       weekly_keep=1         
       weekly_day=monday        
  
       monthly_want=yes     
       monthly_time=23:59   
       monthly_day=12        
       monthly_keep=1       
}       
    
backup homeBackup {         
       subvol=home    
       remote=yes     
       host=foobar      
       backup_dir=/       
       timeframe=weekly      
       weekly_time=23:59      
       weekly_day=monday     
       keep=1    
}      
       
