#
# This config shows that we cannot omit a required backup setting
#

yabsm_snapshot_dir=/

define_backup homeBackup {

    remote=yes
    
    host=whatever

    ### subvol=home
    
    backup_dir=/
    
    timeframe=hourly
    
    keep=100
}

define_subvol home {

    mountpoint=/home

    5minute_want=no
    5minute_keep=0

    hourly_want=no
    hourly_keep=0

    midnight_want=no
    midnight_keep=0

    monthly_want=no
    monthly_keep=0
}
