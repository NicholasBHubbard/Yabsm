#
# This config shows that we must define a 'host' setting on a remote backup
#

yabsm_dir=/#always required

define_backup homeBackup {

    remote=yes
    
    ### host=foobar

    subvol=home
    backup_dir=/
    timeframe=hourly
    keep=100
}

define_subvol home {
    mountpoint=/home
    5minute_want=no
    hourly_want=no
    midnight_want=no
    weekly_want=no
    monthly_want=no
}
