#
# This config shows a backup with the max amount of settings
#

yabsm_dir=/

backup homeBackup {
    subvol=home
    remote=no
    backup_dir=/home
    timeframe=daily
    time=23:59
    keep=12
}

subvol home {
    mountpoint=/home
    5minute_want=no
    hourly_want=no
    daily_want=no
    weekly_want=no
    monthly_want=no
}
