#
# This config has minimum *keep* setting values.
#

yabsm_dir=/ # always required

subvol home {
       mountpoint=/home

       5minute_want=yes
       5minute_keep=1 # minimum is 1

       hourly_want=yes
       hourly_keep=1 # minimum is 1

       daily_want=yes
       daily_time=23:59
       daily_keep=1 # minimum is 1

       weekly_want=yes
       weekly_keep=1 # minimum is 1
       weekly_day=monday
       weekly_time=23:59

       monthly_want=no
       monthly_keep=1 # minimum is 1
       monthly_time=00:00
}

backup homeBackup {

       keep=1 # minimum is 1

       subvol=home
       remote=no
       backup_dir=/
       timeframe=5minute
}