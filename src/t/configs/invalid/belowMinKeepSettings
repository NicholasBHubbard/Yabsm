#
# This config has below minimum *keep* setting values.
#

yabsm_dir=/ # always required

subvol home {
       mountpoint=/home

       5minute_want=yes
       5minute_keep=0 # minimum is 1

       hourly_want=yes
       hourly_keep=0 # minimum is 1

       daily_want=yes
       daily_keep=0 # minimum is 1

       weekly_want=yes
       weekly_time=23:59
       weekly_keep=0 # minimum is 1
       weekly_day=monday

       monthly_want=yes
       monthly_time=00:00
       monthly_day=30
       monthly_keep=0 # minimum is 1
}

backup homeBackup {
       subvol=home

       remote=no

       backup_dir=/

       keep=0 # minimum is 1

       timeframe=5minute
}