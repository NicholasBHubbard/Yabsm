#
# this config shows that a config file with max vals for hourly_take
# and daily_take can be parsed
#

snapshot_dir=/#always required

define_subvol home {

    mountpoint=/home

    hourly_want=yes
    hourly_take=60
    hourly_keep=500000

    daily_want=yes
    daily_take=24
    daily_keep=0

    midnight_want=yes
    midnight_keep=1000000000000

    monthly_want=yes
    monthly_keep=1
}